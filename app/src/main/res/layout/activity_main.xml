    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gugua"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dime_15dp">

        <Button
            android:id="@+id/btn_tiaoguo"
            android:layout_width="@dimen/dime_90dp"
            android:layout_height="@dimen/dime_30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_20sp"
            android:layout_marginTop="@dimen/dime_30dp"
            android:background="@drawable/shape_tiaoguo"
            android:text="@string/main_tiaoguo"
            android:textColor="#ffffff"
            android:textSize="@dimen/size_20sp"></Button>
    </RelativeLayout>

</RelativeLayout>