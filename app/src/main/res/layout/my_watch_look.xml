<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/my_watch_check_box"
        android:src="@mipmap/ic_uncheck"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/RelativeLayout_my_Watch_look"
        android:layout_width="wrap_content"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/my_watch_name"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/my_watch_image_view"
            android:text="TextView" />

        <ImageView
            android:id="@+id/my_watch_image_view"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="-1dp" />

        <ImageView
            android:id="@+id/my_watch_image_imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/my_watch_name"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/watch_video" />

        <TextView
            android:id="@+id/my_watch_text_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dime_15dp"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@+id/my_watch_image_imageView4"
            android:text="TextView" />

    </RelativeLayout>
</LinearLayout>